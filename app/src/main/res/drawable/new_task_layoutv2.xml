<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shape con gradiente -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFB1B1" />
            <corners android:radius="0dp" />
        </shape>
    </item>

    <!-- Shape con gradiente en el cuadrado interior -->
    <item android:top="0dp" android:right="0dp" android:bottom="0dp" android:left="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FFCBCB"
                android:endColor="#FFEAE3"
                android:angle="135" />
            <corners android:radius="0dp" />
            <stroke
                android:width="10dp"
                android:color="#FFB1B1"
                />
        </shape>
    </item>

</layer-list>